    "scripts": {
        "clean": "shx rm -rf dist",
        "build": "yarn clean && esbuild --bundle --platform=node --target=node14 --outdir=dist --sourcemap --legal-comments=none `find src/api \\\\( -name '*.ts' \\\\)`",
        "vercel-build": "yarn run build --minify",
        "fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint": "eslint . && prettier --check '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint:fix": "eslint --fix . && yarn fmt",
        "nuke": "shx rm -rf node_modules yarn.lock"
    },
    "dependencies": {
        "@solana/pay": "file:../../core",
        "@solana/web3.js": "^1.32.0",
        "bignumber.js": "^9.0.2",
        "bs58": "^4.0.1",
        "cache-manager": "^3.6.0",
        "cors": "^2.8.5",
        "express-rate-limit": "^5.5.1"
    },
    "devDependencies": {
        "@types/bs58": "^4.0.1",
        "@types/cache-manager": "^3.4.2",
        "@types/cors": "^2.8.12",
        "@types/eslint": "^8.4.1",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/express": "^4.17.13",
        "@types/express-rate-limit": "^5.1.3",
        "@types/node": "^16.11.14",
        "@types/prettier": "^2.4.3",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "@vercel/node": "^1.12.1",
        "esbuild": "^0.14.21",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gh-pages": "^3.2.3",
        "postcss": "^8.1.0",
        "postcss-custom-properties": "^12.1.3",
        "postcss-import": "^14.0.2",
        "postcss-modules": "^4.3.0",
        "postcss-nesting": "^10.1.2",
        "postcss-url": "^10.1.3",
        "prettier": "^2.5.1",
        "shx": "^0.3.4",
        "tslib": "^2.3.1",
        "typescript": "^4.5.5",
        "vercel": "^23.1.2"
    }
